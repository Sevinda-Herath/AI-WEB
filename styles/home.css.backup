/* Technologies Section */
.technologies {
    padding: 120px 40px;
    background: linear-gradient(135deg, #0D1117 0%, #161B22 50%, #21262D 100%);
    position: relative;
    overflow: hidden;
}

.technologies::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 30% 80%, rgba(107, 97, 248, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(157, 85, 255, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.technologies-container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
}

.section-header {
    text-align: center;
    margin-bottom: 80px;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.2s forwards;
}

.section-title {
    font-family: 'Ubuntu', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    color: #EBF1F7;
    margin: 0 0 20px 0;
    background: linear-gradient(135deg, #6b61f8, #9d55ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, #6b61f8, #9d55ff);
    border-radius: 2px;
    opacity: 0;
    animation: underlineExpand 0.8s ease-out 0.8s forwards;
}

.section-subtitle {
    font-family: 'Roboto', sans-serif;
    font-size: 1.2rem;
    color: #8B949E;
    margin: 0;
    font-weight: 300;
}

.tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    margin-top: 20px;
}

.tech-card {
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.8), rgba(33, 38, 45, 0.8));
    border: 1px solid rgba(107, 97, 248, 0.2);
    border-radius: 20px;
    padding: 40px 30px;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(50px) rotateX(10deg);
    animation: techCardEntrance 0.8s ease-out forwards;
    cursor: pointer;
    backdrop-filter: blur(10px);
}

.tech-card:nth-child(1) { animation-delay: 0.4s; }
.tech-card:nth-child(2) { animation-delay: 0.6s; }
.tech-card:nth-child(3) { animation-delay: 0.8s; }
.tech-card:nth-child(4) { animation-delay: 1.0s; }
.tech-card:nth-child(5) { animation-delay: 1.2s; }
.tech-card:nth-child(6) { animation-delay: 1.4s; }

.tech-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(107, 97, 248, 0.1), transparent);
    transition: left 0.8s ease;
}

.tech-card:hover::before {
    left: 100%;
}

.tech-card:hover {
    transform: translateY(-10px) scale(1.02);
    border-color: rgba(107, 97, 248, 0.5);
    box-shadow: 0 20px 40px rgba(107, 97, 248, 0.2);
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.95), rgba(33, 38, 45, 0.95));
}

.tech-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(107, 97, 248, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
}

.tech-card:hover .tech-glow {
    opacity: 1;
}

.tech-icon {
    width: 80px;
    height: 80px;
    border-radius: 20px;
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.2), rgba(157, 85, 255, 0.2));
    border: 2px solid rgba(107, 97, 248, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 25px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.tech-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
}

.tech-card:hover .tech-icon::before {
    transform: translateX(100%);
}

.tech-icon i {
    font-size: 2.5rem;
    color: #6b61f8;
    transition: all 0.4s ease;
    z-index: 1;
    position: relative;
}

.tech-card:hover .tech-icon {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.3), rgba(157, 85, 255, 0.3));
    border-color: rgba(107, 97, 248, 0.6);
    box-shadow: 0 10px 25px rgba(107, 97, 248, 0.3);
}

.tech-card:hover .tech-icon i {
    color: #9d55ff;
    transform: scale(1.1);
    filter: drop-shadow(0 0 10px rgba(107, 97, 248, 0.6));
}

.tech-content {
    position: relative;
    z-index: 2;
}

.tech-name {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #EBF1F7;
