/* Hero Section */
.hero-section {
    position: relative;
    height: 100vh;
    min-height: 600px;
    max-height: 1000px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #0D1117 0%, #161B22 50%, #21262D 100%);
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(2px 2px at 20% 30%, #6b61f8, transparent),
                      radial-gradient(2px 2px at 40% 70%, #9d55ff, transparent),
                      radial-gradient(1px 1px at 90% 40%, #ffffff, transparent),
                      radial-gradient(1px 1px at 50% 50%, #6b61f8, transparent);
    background-size: 550px 550px, 350px 350px, 250px 250px, 150px 150px;
    background-position: 0 0, 40px 60px, 130px 270px, 70px 100px;
    animation: particleFloat 20s linear infinite;
    opacity: 0.4;
}

.hero-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        linear-gradient(rgba(107, 97, 248, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(107, 97, 248, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: gridMove 30s linear infinite;
    opacity: 0.3;
}

.hero-content {
    position: relative;
    z-index: 10;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    max-width: 1400px;
    width: 90%;
    align-items: center;
    margin-top: 100px;
}

.hero-text {
    opacity: 0;
    transform: translateY(50px);
    animation: heroFadeInUp 1.2s ease-out 0.5s forwards;
}

.hero-title {
    font-family: 'Ubuntu', sans-serif;
    font-size: 4rem;
    font-weight: 700;
    color: #EBF1F7;
    margin: 0 0 20px 0;
    line-height: 1.1;
    overflow: hidden;
}

.title-line-1,
.title-line-2 {
    display: block;
    opacity: 0;
    transform: translateY(100%);
}

.title-line-1 {
    animation: titleSlideUp 1s ease-out 0.8s forwards;
    background: linear-gradient(135deg, #6b61f8, #9d55ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.title-line-2 {
    animation: titleSlideUp 1s ease-out 1s forwards;
    color: #EBF1F7;
}

.hero-subtitle {
    font-family: 'Roboto', sans-serif;
    font-size: 1.3rem;
    color: #8B949E;
    margin: 0 0 25px 0;
    font-weight: 300;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 1.3s forwards;
}

.hero-description {
    font-family: 'Roboto', sans-serif;
    font-size: 1.1rem;
    color: #6B7280;
    line-height: 1.7;
    margin: 0 0 40px 0;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 1.5s forwards;
}

.hero-buttons {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 1.7s forwards;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    border-radius: 50px;
    text-decoration: none;
    font-family: 'Ubuntu', sans-serif;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    cursor: pointer;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.3s ease, height 0.3s ease;
}

.btn:hover::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, #6b61f8, #9d55ff);
    color: #ffffff;
    border: 2px solid transparent;
}

.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(107, 97, 248, 0.4);
}

.btn-secondary {
    background: transparent;
    color: #EBF1F7;
    border: 2px solid #6b61f8;
}

.btn-secondary:hover {
    background: #6b61f8;
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(107, 97, 248, 0.3);
}

.hero-visual {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    opacity: 0;
    transform: translateX(50px);
    animation: heroSlideInRight 1.2s ease-out 0.7s forwards;
}

.hero-chart {
    position: relative;
    width: 350px;
    height: 200px;
    background: rgba(39, 46, 54, 0.8);
    border-radius: 20px;
    border: 1px solid rgba(107, 97, 248, 0.3);
    padding: 30px;
    backdrop-filter: blur(10px);
}

.chart-line {
    position: absolute;
    top: 50%;
    left: 30px;
    right: 30px;
    height: 3px;
    background: linear-gradient(90deg, #6b61f8, #9d55ff, #6b61f8);
    border-radius: 2px;
    opacity: 0;
    animation: chartLineGrow 2s ease-out 2s forwards;
}

.chart-points {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.point {
    position: absolute;
    width: 12px;
    height: 12px;
    background: linear-gradient(135deg, #6b61f8, #9d55ff);
    border-radius: 50%;
    border: 2px solid #ffffff;
    box-shadow: 0 0 20px rgba(107, 97, 248, 0.6);
    opacity: 0;
    transform: scale(0);
    animation: pointPop 0.5s ease-out forwards;
}

.point:nth-child(1) {
    top: 70%;
    left: 15%;
    animation-delay: 2.2s;
}

.point:nth-child(2) {
    top: 40%;
    left: 30%;
    animation-delay: 2.4s;
}

.point:nth-child(3) {
    top: 60%;
    left: 45%;
    animation-delay: 2.6s;
}

.point:nth-child(4) {
    top: 20%;
    left: 65%;
    animation-delay: 2.8s;
}

.point:nth-child(5) {
    top: 10%;
    left: 80%;
    animation-delay: 3s;
}

.hero-stats {
    display: flex;
    gap: 30px;
}

.stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    background: rgba(39, 46, 54, 0.6);
    border-radius: 15px;
    border: 1px solid rgba(107, 97, 248, 0.2);
    backdrop-filter: blur(10px);
    min-width: 80px;
    opacity: 0;
    transform: translateY(30px);
    animation: statSlideUp 0.6s ease-out forwards;
}

.stat:nth-child(1) {
    animation-delay: 2.5s;
}

.stat:nth-child(2) {
    animation-delay: 2.7s;
}

.stat:nth-child(3) {
    animation-delay: 2.9s;
}

.stat-value {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: #6b61f8;
    margin-bottom: 5px;
}

.stat-label {
    font-family: 'Roboto', sans-serif;
    font-size: 0.9rem;
    color: #8B949E;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.hero-scroll-indicator {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    opacity: 0;
    animation: fadeInUp 1s ease-out 3s forwards;
    z-index: 10;
}

.scroll-text {
    font-family: 'Roboto', sans-serif;
    font-size: 0.9rem;
    color: #8B949E;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.scroll-arrow {
    color: #6b61f8;
    font-size: 1.5rem;
    animation: bounce 2s infinite;
}

/* Content Sections */
.content-sections {
    position: relative;
    z-index: 20;
    background: #0D1117;
}

/* Technologies Section */
.technologies {
    padding: 120px 40px;
    background: linear-gradient(135deg, #0D1117 0%, #161B22 50%, #21262D 100%);
    position: relative;
    overflow: hidden;
}

.technologies::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 30% 80%, rgba(107, 97, 248, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(157, 85, 255, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.technologies-container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
}

.section-header {
    text-align: center;
    margin-bottom: 80px;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.2s forwards;
}

.section-title {
    font-family: 'Ubuntu', sans-serif;
    font-size: 3rem;
    font-weight: 700;
    color: #EBF1F7;
    margin: 0 0 20px 0;
    background: linear-gradient(135deg, #6b61f8, #9d55ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, #6b61f8, #9d55ff);
    border-radius: 2px;
    opacity: 0;
    animation: underlineExpand 0.8s ease-out 0.8s forwards;
}

.section-subtitle {
    font-family: 'Roboto', sans-serif;
    font-size: 1.2rem;
    color: #8B949E;
    margin: 0;
    font-weight: 300;
}

.tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    margin-top: 20px;
}

.tech-card {
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.8), rgba(33, 38, 45, 0.8));
    border: 1px solid rgba(107, 97, 248, 0.2);
    border-radius: 20px;
    padding: 40px 30px;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    transform: translateY(50px) rotateX(10deg);
    animation: techCardEntrance 0.8s ease-out forwards;
    cursor: pointer;
    backdrop-filter: blur(10px);
}

.tech-card:nth-child(1) { animation-delay: 0.4s; }
.tech-card:nth-child(2) { animation-delay: 0.6s; }
.tech-card:nth-child(3) { animation-delay: 0.8s; }
.tech-card:nth-child(4) { animation-delay: 1.0s; }
.tech-card:nth-child(5) { animation-delay: 1.2s; }
.tech-card:nth-child(6) { animation-delay: 1.4s; }

.tech-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(107, 97, 248, 0.1), transparent);
    transition: left 0.8s ease;
}

.tech-card:hover::before {
    left: 100%;
}

.tech-card:hover {
    transform: translateY(-10px) scale(1.02);
    border-color: rgba(107, 97, 248, 0.5);
    box-shadow: 0 20px 40px rgba(107, 97, 248, 0.2);
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.95), rgba(33, 38, 45, 0.95));
}

.tech-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(107, 97, 248, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
}

.tech-card:hover .tech-glow {
    opacity: 1;
}

.tech-icon {
    width: 80px;
    height: 80px;
    border-radius: 20px;
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.2), rgba(157, 85, 255, 0.2));
    border: 2px solid rgba(107, 97, 248, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 25px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.tech-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
}

.tech-card:hover .tech-icon::before {
    transform: translateX(100%);
}

.tech-icon i {
    font-size: 2.5rem;
    color: #6b61f8;
    transition: all 0.4s ease;
    z-index: 1;
    position: relative;
}

.tech-card:hover .tech-icon {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.3), rgba(157, 85, 255, 0.3));
    border-color: rgba(107, 97, 248, 0.6);
    box-shadow: 0 10px 25px rgba(107, 97, 248, 0.3);
}

.tech-card:hover .tech-icon i {
    color: #9d55ff;
    transform: scale(1.1);
    filter: drop-shadow(0 0 10px rgba(107, 97, 248, 0.6));
}

.tech-content {
    position: relative;
    z-index: 2;
}

.tech-name {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #EBF1F7;
    margin: 0 0 10px 0;
    transition: color 0.3s ease;
}

.tech-card:hover .tech-name {
    color: #ffffff;
}

.tech-description {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    color: #8B949E;
    margin: 0;
    line-height: 1.5;
    transition: color 0.3s ease;
}

.tech-card:hover .tech-description {
    color: #A5A5A5;
}

/* Custom colors for specific technologies */
.tech-card[data-tech="python"]:hover .tech-icon {
    background: linear-gradient(135deg, rgba(61, 174, 233, 0.3), rgba(255, 212, 59, 0.3));
    border-color: rgba(61, 174, 233, 0.6);
}

.tech-card[data-tech="python"]:hover .tech-icon i {
    color: #3dae74;
}

.tech-card[data-tech="flask"]:hover .tech-icon {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.3), rgba(0, 0, 0, 0.2));
    border-color: rgba(255, 255, 255, 0.6);
}

.tech-card[data-tech="flask"]:hover .tech-icon i {
    color: #ffffff;
}

.tech-card[data-tech="react"]:hover .tech-icon {
    background: linear-gradient(135deg, rgba(97, 218, 251, 0.3), rgba(34, 139, 230, 0.3));
    border-color: rgba(97, 218, 251, 0.6);
}

.tech-card[data-tech="react"]:hover .tech-icon i {
    color: #61dafb;
}

.tech-card[data-tech="postgresql"]:hover .tech-icon {
    background: linear-gradient(135deg, rgba(51, 103, 145, 0.3), rgba(255, 255, 255, 0.2));
    border-color: rgba(51, 103, 145, 0.6);
}

.tech-card[data-tech="postgresql"]:hover .tech-icon i {
    color: #336791;
}

.tech-card[data-tech="docker"]:hover .tech-icon {
    background: linear-gradient(135deg, rgba(44, 156, 207, 0.3), rgba(35, 109, 162, 0.3));
    border-color: rgba(44, 156, 207, 0.6);
}

.tech-card[data-tech="docker"]:hover .tech-icon i {
    color: #2c9cf0;
}

.tech-card[data-tech="ai"]:hover .tech-icon {
    background: linear-gradient(135deg, rgba(255, 193, 7, 0.3), rgba(255, 152, 0, 0.3));
    border-color: rgba(255, 193, 7, 0.6);
}

.tech-card[data-tech="ai"]:hover .tech-icon i {
    color: #ffc107;
}

/* Animations */
@keyframes particleFloat {
    0% {
        transform: translateY(0px) translateX(0px);
    }
    33% {
        transform: translateY(-30px) translateX(20px);
    }
    66% {
        transform: translateY(20px) translateX(-15px);
    }
    100% {
        transform: translateY(0px) translateX(0px);
    }
}

@keyframes gridMove {
    0% {
        transform: translate(0, 0);
    }
    100% {
        transform: translate(50px, 50px);
    }
}

@keyframes heroFadeInUp {
    0% {
        opacity: 0;
        transform: translateY(50px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes heroSlideInRight {
    0% {
        opacity: 0;
        transform: translateX(50px);
    }
    100% {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes titleSlideUp {
    0% {
        opacity: 0;
        transform: translateY(100%);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes chartLineGrow {
    0% {
        width: 0;
        opacity: 0;
    }
    100% {
        width: calc(100% - 60px);
        opacity: 1;
    }
}

@keyframes pointPop {
    0% {
        opacity: 0;
        transform: scale(0);
    }
    70% {
        transform: scale(1.2);
    }
    100% {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes statSlideUp {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10px);
    }
    60% {
        transform: translateY(-5px);
    }
}

@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes underlineExpand {
    0% {
        width: 0;
        opacity: 0;
    }
    100% {
        width: 100px;
        opacity: 1;
    }
}

@keyframes techCardEntrance {
    0% {
        opacity: 0;
        transform: translateY(50px) rotateX(10deg);
    }
    100% {
        opacity: 1;
        transform: translateY(0) rotateX(0deg);
    }
}

/* Responsive Design */
@media screen and (max-width: 1200px) {
    .tech-grid {
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 25px;
    }
    
    .tech-card {
        padding: 35px 25px;
    }
}

@media screen and (max-width: 768px) {
    .technologies {
        padding: 80px 20px;
    }
    
    .section-title {
        font-size: 2.5rem;
    }
    
    .section-subtitle {
        font-size: 1.1rem;
    }
    
    .tech-grid {
        grid-template-columns: 1fr;
        gap: 20px;
        margin-top: 40px;
    }
    
    .tech-card {
        padding: 30px 20px;
    }
    
    .tech-icon {
        width: 70px;
        height: 70px;
    }
    
    .tech-icon i {
        font-size: 2rem;
    }
    
    .tech-name {
        font-size: 1.3rem;
    }
    
    .tech-description {
        font-size: 0.95rem;
    }
}

@media screen and (max-width: 480px) {
    .technologies {
        padding: 60px 15px;
    }
    
    .section-header {
        margin-bottom: 50px;
    }
    
    .section-title {
        font-size: 2rem;
    }
    
    .section-subtitle {
        font-size: 1rem;
    }
    
    .tech-card {
        padding: 25px 15px;
    }
    
    .tech-icon {
        width: 60px;
        height: 60px;
    }
    
    .tech-icon i {
        font-size: 1.8rem;
    }
    
    .tech-name {
        font-size: 1.2rem;
    }
    
    .tech-description {
        font-size: 0.9rem;
    }
}

/* Architecture Section */
.architecture {
    padding: 60px 40px;
    margin-top: 120px;
    text-align: center;
}

.architecture h2 {
    font-family: 'Ubuntu', sans-serif;
    font-size: 2.5rem;
    color: #EBF1F7;
    margin-bottom: 60px;
    opacity: 0;
    animation: fadeInUp 1s ease-in forwards;
}

.architecture-flow {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 60px;
    max-width: 1400px;
    margin: 0 auto;
    flex-wrap: wrap;
}

.architecture-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 250px;
    opacity: 0;
    transform: translateY(30px);
    animation: slideInUp 0.8s ease-out forwards;
}

.architecture-step[data-step="1"] {
    animation-delay: 0.5s;
}

.architecture-step[data-step="3"] {
    animation-delay: 1.5s;
}

.architecture-step[data-step="5"] {
    animation-delay: 2.5s;
}

.arch-icon {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #6b61f8, #9d55ff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    box-shadow: 0 10px 30px rgba(107, 97, 248, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.arch-icon:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 40px rgba(107, 97, 248, 0.5);
}

.arch-icon i {
    font-size: 2.4rem;
    color: #ffffff;
}

.arch-description h3 {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.4rem;
    color: #EBF1F7;
    margin-bottom: 10px;
    margin-top: 0;
}

.arch-description p {
    font-family: 'Roboto', sans-serif;
    font-size: 0.95rem;
    color: #8B949E;
    line-height: 1.6;
    margin: 0;
}

.arrow-container {
    display: flex;
