    flex-wrap: wrap;
}

.architecture-step {
    opacity: 0;
    transform: translateY(50px) rotateX(10deg);
    animation: archStepEntrance 0.8s ease-out forwards;
}

.architecture-step:nth-child(1) { animation-delay: 0.4s; }
.architecture-step:nth-child(3) { animation-delay: 0.8s; }
.architecture-step:nth-child(5) { animation-delay: 1.2s; }

.arch-card {
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.9), rgba(33, 38, 45, 0.9));
    border: 1px solid rgba(107, 97, 248, 0.2);
    border-radius: 24px;
    padding: 40px 30px;
    max-width: 320px;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
    cursor: pointer;
}

.arch-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(107, 97, 248, 0.1), transparent);
    transition: left 0.8s ease;
}

.arch-card:hover::before {
    left: 100%;
}

.arch-card:hover {
    transform: translateY(-15px) scale(1.05);
    border-color: rgba(107, 97, 248, 0.5);
    box-shadow: 0 25px 50px rgba(107, 97, 248, 0.3);
}

.arch-icon {
    width: 90px;
    height: 90px;
    border-radius: 20px;
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.3), rgba(157, 85, 255, 0.3));
    border: 2px solid rgba(107, 97, 248, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 25px;
    position: relative;
    transition: all 0.4s ease;
}

.arch-icon i {
    font-size: 2.5rem;
    color: #6b61f8;
    transition: all 0.4s ease;
    z-index: 2;
    position: relative;
}

.icon-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, rgba(107, 97, 248, 0.2) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
}

.arch-card:hover .icon-glow {
    opacity: 1;
}

.arch-card:hover .arch-icon {
    transform: scale(1.1) rotate(5deg);
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.5), rgba(157, 85, 255, 0.5));
    border-color: rgba(107, 97, 248, 0.7);
    box-shadow: 0 15px 30px rgba(107, 97, 248, 0.4);
}

.arch-card:hover .arch-icon i {
    color: #9d55ff;
    transform: scale(1.2);
    filter: drop-shadow(0 0 15px rgba(107, 97, 248, 0.8));
}

.arch-content {
    text-align: center;
    position: relative;
    z-index: 2;
}

.arch-title {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #EBF1F7;
    margin: 0 0 15px 0;
    transition: color 0.3s ease;
}

.arch-card:hover .arch-title {
    color: #ffffff;
}

.arch-description {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    color: #8B949E;
    line-height: 1.6;
    margin: 0 0 20px 0;
    transition: color 0.3s ease;
}

.arch-card:hover .arch-description {
    color: #A5A5A5;
}

.arch-features {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
}

.feature-tag {
    background: rgba(107, 97, 248, 0.2);
    border: 1px solid rgba(107, 97, 248, 0.3);
    color: #6b61f8;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 500;
    transition: all 0.3s ease;
}

.arch-card:hover .feature-tag {
    background: rgba(107, 97, 248, 0.3);
    border-color: rgba(107, 97, 248, 0.5);
    color: #9d55ff;
}

.card-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(107, 97, 248, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
}

.arch-card:hover .card-glow {
    opacity: 1;
}

/* Enhanced Arrow Containers */
.arrow-container {
    opacity: 0;
    animation: archStepEntrance 0.8s ease-out forwards;
    position: relative;
}

.arrow-container:nth-child(2) { animation-delay: 0.6s; }
.arrow-container:nth-child(4) { animation-delay: 1.0s; }

.arrow-flow {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    position: relative;
}

.flow-particles {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 4px;
    height: 4px;
    background: #6b61f8;
    border-radius: 50%;
    animation: flowParticle 2s ease-in-out infinite;
}

.arrow {
    font-size: 2rem;
    color: #6b61f8;
    transition: all 0.3s ease;
    animation: arrowPulse 2s ease-in-out infinite;
}

.arrow-container:hover .arrow {
    color: #9d55ff;
    transform: scale(1.2);
    filter: drop-shadow(0 0 10px rgba(107, 97, 248, 0.8));
}

/* Architecture Stats */
.architecture-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    margin-top: 80px;
    opacity: 0;
    animation: fadeInUp 1s ease-out 1.6s forwards;
}

.stat-item {
    text-align: center;
    padding: 30px 20px;
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.6), rgba(33, 38, 45, 0.6));
    border: 1px solid rgba(107, 97, 248, 0.2);
    border-radius: 16px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.stat-item:hover {
    transform: translateY(-5px);
    border-color: rgba(107, 97, 248, 0.4);
    box-shadow: 0 10px 25px rgba(107, 97, 248, 0.2);
}

.stat-number {
    font-family: 'Ubuntu', sans-serif;
    font-size: 2rem;
    font-weight: 700;
    color: #6b61f8;
    margin-bottom: 10px;
}

.stat-label {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    color: #8B949E;
    font-weight: 300;
}

/* Refined About Section */
.about {
    padding: 120px 40px;
    background: linear-gradient(135deg, #161B22 0%, #0D1117 50%, #21262D 100%);
    position: relative;
    overflow: hidden;
}

.about::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 70% 20%, rgba(107, 97, 248, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 30% 80%, rgba(157, 85, 255, 0.08) 0%, transparent 50%);
    pointer-events: none;
}

.about-container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
}

.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
}

.about-text {
    opacity: 0;
    transform: translateX(-50px);
    animation: slideInFromLeft 1s ease-out 0.3s forwards;
}

.about-description {
    margin: 40px 0;
}

.about-paragraph {
    font-family: 'Roboto', sans-serif;
    font-size: 1.1rem;
    color: #8B949E;
    line-height: 1.7;
    margin-bottom: 25px;
    transition: color 0.3s ease;
}

.about-features {
    margin: 50px 0;
}

.feature-item {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin-bottom: 30px;
    padding: 20px;
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.4), rgba(33, 38, 45, 0.4));
    border-radius: 16px;
    border: 1px solid rgba(107, 97, 248, 0.1);
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
}

.feature-item:hover {
    border-color: rgba(107, 97, 248, 0.3);
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.6), rgba(33, 38, 45, 0.6));
    transform: translateX(10px);
}

.feature-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.2), rgba(157, 85, 255, 0.2));
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
}

.feature-icon i {
    font-size: 1.3rem;
    color: #6b61f8;
    transition: all 0.3s ease;
}

.feature-item:hover .feature-icon {
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.3), rgba(157, 85, 255, 0.3));
    transform: scale(1.1);
}

.feature-item:hover .feature-icon i {
    color: #9d55ff;
}

.feature-content h4 {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.2rem;
    color: #EBF1F7;
    margin: 0 0 8px 0;
    transition: color 0.3s ease;
}

.feature-content p {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    color: #8B949E;
    margin: 0;
    line-height: 1.5;
    transition: color 0.3s ease;
}

.feature-item:hover .feature-content h4 {
    color: #ffffff;
}

.feature-item:hover .feature-content p {
    color: #A5A5A5;
}

.about-cta {
    display: flex;
    gap: 20px;
    margin-top: 40px;
    flex-wrap: wrap;
}

.about-visual {
    opacity: 0;
    transform: translateX(50px);
    animation: slideInFromRight 1s ease-out 0.5s forwards;
}

.about-chart {
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.8), rgba(33, 38, 45, 0.8));
    border: 1px solid rgba(107, 97, 248, 0.2);
    border-radius: 20px;
    padding: 40px;
    margin-bottom: 30px;
    position: relative;
    backdrop-filter: blur(10px);
}

.chart-container {
    display: flex;
    align-items: end;
    justify-content: space-between;
    gap: 8px;
    height: 200px;
    margin-bottom: 20px;
}

.chart-bar {
    background: linear-gradient(180deg, #6b61f8, #9d55ff);
    border-radius: 4px 4px 0 0;
    width: 100%;
    max-width: 30px;
    animation: chartBarGrow 2s ease-out forwards;
    transform-origin: bottom;
    opacity: 0;
}

.chart-bar:nth-child(1) { animation-delay: 0.8s; }
.chart-bar:nth-child(2) { animation-delay: 1.0s; }
.chart-bar:nth-child(3) { animation-delay: 1.2s; }
.chart-bar:nth-child(4) { animation-delay: 1.4s; }
.chart-bar:nth-child(5) { animation-delay: 1.6s; }
.chart-bar:nth-child(6) { animation-delay: 1.8s; }

.chart-overlay {
    text-align: center;
}

.chart-title {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.1rem;
    color: #8B949E;
    margin-bottom: 10px;
}

.chart-value {
    font-family: 'Ubuntu', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #6b61f8;
}

.about-metrics {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

.metric-card {
    background: linear-gradient(135deg, rgba(37, 41, 46, 0.8), rgba(33, 38, 45, 0.8));
    border: 1px solid rgba(107, 97, 248, 0.2);
    border-radius: 16px;
    padding: 25px;
    display: flex;
    align-items: center;
    gap: 15px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.metric-card:hover {
    border-color: rgba(107, 97, 248, 0.4);
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(107, 97, 248, 0.2);
}

.metric-icon {
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, rgba(107, 97, 248, 0.2), rgba(157, 85, 255, 0.2));
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.metric-icon i {
    font-size: 1.2rem;
    color: #6b61f8;
}

.metric-number {
    font-family: 'Ubuntu', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #EBF1F7;
    margin-bottom: 5px;
}

.metric-label {
    font-family: 'Roboto', sans-serif;
    font-size: 0.9rem;
    color: #8B949E;
}

/* Animations */
@keyframes archStepEntrance {
    0% {
        opacity: 0;
        transform: translateY(50px) rotateX(10deg);
    }
    100% {
        opacity: 1;
        transform: translateY(0) rotateX(0deg);
    }
}

@keyframes flowParticle {
    0%, 100% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 1;
    }
    50% {
        transform: translate(-50%, -80%) scale(1.5);
        opacity: 0.5;
    }
}

@keyframes arrowPulse {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
}

@keyframes slideInFromLeft {
    0% {
        opacity: 0;
        transform: translateX(-50px);
    }
    100% {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes slideInFromRight {
    0% {
        opacity: 0;
        transform: translateX(50px);
    }
    100% {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes chartBarGrow {
    0% {
        opacity: 0;
        transform: scaleY(0);
    }
    100% {
        opacity: 1;
        transform: scaleY(1);
    }
}

/* Responsive Design */
@media screen and (max-width: 1200px) {
    .architecture-flow {
        gap: 30px;
    }
    
    .about-content {
        gap: 60px;
    }
}

@media screen and (max-width: 768px) {
    .architecture {
        padding: 80px 20px;
    }
    
    .architecture-flow {
        flex-direction: column;
        gap: 40px;
    }
    
    .arrow-flow {
        flex-direction: row;
        transform: rotate(90deg);
    }
    
    .architecture-stats {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }
    
    .about {
        padding: 80px 20px;
    }
    
    .about-content {
        grid-template-columns: 1fr;
        gap: 50px;
    }
    
    .about-cta {
        justify-content: center;
    }
    
    .about-metrics {
        grid-template-columns: 1fr;
    }
}

@media screen and (max-width: 480px) {
    .architecture {
        padding: 60px 15px;
    }
    
    .arch-card {
        padding: 30px 20px;
    }
    
    .architecture-stats {
        grid-template-columns: 1fr;
    }
    
    .about {
        padding: 60px 15px;
    }
    
    .about-cta {
        flex-direction: column;
    }
    
    .chart-container {
        height: 150px;
    }
}
